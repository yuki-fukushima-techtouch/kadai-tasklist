<%= form_with(model: task, local: true) do |f| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% task.errors.full_tasks.each do |tsk| %>
          <li><%= tsk %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :content, 'タスク内容' %>
  <%= f.text_field :content %>
  
  <%= f.label :status, '進捗' %>
  <%= f.text_field :status %>

  <%= f.submit '登録' %>
<% end %>